{
  "name": "browser-youtube-play-all",
  "version": "0.0.3",
  "private": true,
  "description": "Adds a 'Play All' button to YouTube, allowing video playback in Latest, Popular, or Oldest order.",
  "type": "module",
  "scripts": {
    "build": "conc bun:typecheck \"bun:build:*\"",
    "build:chrome": "wxt build -b chrome",
    "build:firefox": "wxt build -b firefox",
    "dev": "conc bun:typecheck \"bun:dev:*\" --restart-tries 1",
    "dev:chrome": "wxt -b chrome",
    "dev:firefox": "wxt -b firefox",
    "publish": "bun run zip && wxt submit",
    "setup": "wxt prepare",
    "typecheck": "tsc --noEmit",
    "zip": "conc bun:zip:*",
    "zip:chrome": "wxt zip -b chrome",
    "zip:firefox": "wxt zip -b firefox"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.6",
    "@types/chrome": "^0.0.315",
    "concurrently": "^9.1.2",
    "typescript": "^5.8.3",
    "wxt": "^0.20.0"
  }
}
